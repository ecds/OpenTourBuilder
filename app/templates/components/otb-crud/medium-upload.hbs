

 <section class='uk-form-control'>
 {{#file-dropzone class='js-upload uk-placeholder uk-text-center uk-inline' name=(concat 'upload-' modelName '-' model.id) as |dropzone queue|}}
  {{#if dropzone.active}}
    {{#if dropzone.valid}}
      Drop to upload
    {{else}}
      Invalid
    {{/if}}
  {{else}}
    <p class='uk-text-middle'>
      {{#if dropzone.supported}}
        Drag and drop images onto this area to upload them or
      {{/if}}
      {{#file-upload name=(concat 'upload-' modelName '-' model.id)
                     for=(concat 'upload-' modelName '-' model.id)
                     accept="image/*"
                     multiple=true
                     onfileadd=(action 'upload' model)}}
        <a id={{concat 'upload-' modelName '-' model.id}} tabindex=0>Upload an Image</a>
      {{/file-upload}}
    </p>
  {{/if}}
{{/file-dropzone}}
</section>