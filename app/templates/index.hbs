            {{!-- <div class='otb-tour-cover {{if (eq sortedTours.length 2) "otb-two-tours" "otb-many-tours"}}' style={{tour.safeBackgroundImage}} /> --}}
            {{!-- <div class='otb-tour-meta'>
                <h4>{{tour.title}}</h4>
                {{tour.stops.length}} Stops
            </div>
        </div> --}}
<div class="uk-card uk-card-default uk-card-small {{if tour.show "uk-animation-slide-bottom"}}">
    <div class="uk-card-media-top">
        <img src="{{baseUrl}}{{tour.splash.original_image.tablet.url}}" alt="" style='width: 100vw;'>
    </div>
    <div class="uk-card-body">
        <h4 class='uk-card-title'>{{tour.title}}</h4>
                {{tour.stops.length}} Stops
    </div>
</div>
    {{/link-to}}
{{/each}}
{{/if}}
