<div class='otb-container'>
<table class='uk-table uk-table-divider otb-stop-list'>
    <tbody>
    {{#each model.sortedTourStops as |tstop|}}
    {{!-- {{#link-to 'tour.stop' stop}} --}}
    <tr class={{if tstop.stop.show 'uk-animation-slide-right'}}
        role='link' tabindex='0'
        onclick={{action (route-action 'goToStop' tstop)}}>
        <td>
            <img src='{{tstop.stop.mobileThumbUrl}}' />
        </td>
        <td class='uk-text-large'>
            {{tstop.stop.title}}
        </td>
        <td>
            {{fa-icon 'chevron-right'}}
        </td>
    </tr>
    {{!-- {{/link-to}} --}}
    {{/each}}
    </tbody>
</table>
</div>
