{{!-- {{#if this.deviceContext.isDesktop}}
  {{#if (eq this.sortedTours.length 1)}}
    <div class="uk-child-width-1-1 uk-light uk-grid-collapse" uk-grid>

    </div>
  {{else if (lt this.sortedTours.length 4)}}
    <div class="{{concat "uk-child-width-1-" this.sortedTours.length}} uk-grid-collapse uk-text-center" uk-grid>
      {{#each this.sortedTours as |tour|}}
        {{#link-to "tour" this.tour.tenant this.tour.slug}}
          <TourSplashBackground @tour={{tour}}>
            <TourCell @tour={{tour}}></TourCell>
          </TourSplashBackground>
        {{/link-to}}
      {{/each}}
    </div>
  {{else}}
    <div class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-grid-small" uk-grid masonry="true">
      {{#each this.sortedTours as |tour|}}
        {{#link-to "tour" tour.tenant tour.slug}}
          <TourSplashBackground @tour={{tour}}>
            <TourCell @tour={{tour}}></TourCell>
          </TourSplashBackground>
        {{/link-to}}
      {{/each}}
    </div>
  {{/if}}
{{else}}
  {{#each this.sortedTours as |tour|}}
    {{#link-to "tour" tour.tenant tour.slug}}
      <div class="uk-card uk-card-default uk-card-small {{if tour.show "uk-animation-slide-bottom"}}">
        <div class="uk-card-media-top">
          <img class="otb-mobile-splash-image" src="{{this.remoteHost}}/{{this.tour.splash.original_image.tablet.url}}" alt={{concat "Intro image for " this.tour.title}}>
        </div>
        <div class="uk-card-body">
          <h4 class="uk-card-title">{{tour.title}}</h4>
          {{tour.stops.length}} Stops
        </div>
      </div>
    {{/link-to}}
  {{/each}}
{{/if}} --}}
<section class="uk-container uk-margin-top">
  <ul class="uk-list">
    {{#each this.model as |tourSet|}}
      <li>
        <a href={{tourSet.subdir}}>
          {{tourSet.name}}
        </a>
      </li>
      <ul>
        {{#each tourSet.publishedTours as |tour|}}
          <li>
            <a href="{{tourSet.subdir}}/{{tour.slug}}">
              {{tour.title}}
            </a>
          </li>
        {{/each}}
      </ul>
    {{/each}}
  </ul>
</section>