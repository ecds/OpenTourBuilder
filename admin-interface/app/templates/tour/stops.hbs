<table class='uk-table uk-table-divider otb-stop-list'>
    <tbody>
    {{#each model.sortedTourStops as |tstop|}}
    {{!-- {{#link-to 'tour.stop' stop}} --}}
    <tr class='{{if tstop.stop.show 'uk-animation-slide-right'}}' onclick={{action (route-action 'goToStop' tstop.stop)}}>
        <td>
            Auto
        </td>
        <td>
            {{tstop.stop.title}}
        </td>
        <td>
            {{fa-icon 'chevron-right' aria-hidden='true'}}
        </td>
    </tr>
    {{!-- {{/link-to}} --}}
    {{/each}}
    </tbody>
</table>
